#:kivy 1.0.9

<GardenaiGame>:    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: root.our_garden.plants[0].name
        


    Label:
        font_size: 40  
        center_x: root.width / 4
        top: root.top - 120
        text: root.our_garden.plants[0].herb




    Label:
        text_size: (root.width / 2.5), None
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 250
        text: root.our_garden.plants[0].soil_status
        



    Label:
        text_size: (root.width / 2.5), None
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 350
        text: root.our_garden.plants[0].light_status
        





