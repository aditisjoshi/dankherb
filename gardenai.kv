#:kivy 1.0.9

<GardenaiGame>:    
    canvas:
        Rectangle:
            pos: self.center_x , 0
            size: 10, self.height

        Rectangle:
            pos: 0, self.center_y 
            size: self.width, 10

    Button:
        id: refreshbutton
        text: "refresh"
        height: 30
        width: 60
        top: root.top
        center_x: root.width - 30
        on_press: root.our_garden.collect_data()

   
    TextInput:
        id: plant0name
        font_size: 40  
        width: root.width / 3
        height: self.minimum_height
        center_x: root.width / 4
        top: root.top + self.minimum_height / 10 - 10
        text: root.our_garden.plants[0].name
        
    TextInput:
        id: plant1name
        font_size: 40  
        width: root.width / 3
        height: self.minimum_height
        top: root.top + self.minimum_height / 10 - 10
        center_x: root.width * 3 / 4
        text: root.our_garden.plants[1].name

