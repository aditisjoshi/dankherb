#:kivy 1.0.9

<GardenaiGame>:    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: root.our_garden.plants[0].name
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: root.our_garden.plants[1].name

    Label:
        font_size: 40  
        center_x: root.width / 4
        top: root.top - 120
        text: root.our_garden.plants[0].herb
        
    Label:
        font_size: 40  
        center_x: root.width * 3 / 4
        top: root.top - 120
        text: root.our_garden.plants[1].herb


    Label:
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 200
        text: root.our_garden.plants[0].soil_status
        
    Label:
        font_size: 30  
        center_x: root.width * 3 / 4
        top: root.top - 200
        text: root.our_garden.plants[1].soil_status



    Label:
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 300
        text: root.our_garden.plants[0].light_status
        
    Label:
        font_size: 30  
        center_x: root.width * 3 / 4
        top: root.top - 300
        text: root.our_garden.plants[1].light_status




